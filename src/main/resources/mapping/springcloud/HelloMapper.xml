<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.puvar.cloudservice.dao.springcloud.HelloMapper">
    <resultMap id="BaseResultMap" type="com.puvar.cloudservice.domain.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="age" property="age" jdbcType="INTEGER"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, name, age
    </sql>
    <select id="helloList" resultMap="BaseResultMap">
        select * from user
    </select>
    <insert id="addUser" parameterType="com.puvar.cloudservice.domain.User">
        insert into user(name,age) value(#{name},#{age})
    </insert>
    <update id="updateUser">
        update user set name=#{name},age=#{age} where id=#{id}
    </update>
</mapper>